<div class="survey">
  <form method="post" action="/survey/<%= @survey.id %>/take">
    <% @survey.questions.each do |question| %>
      <ul><%= question.inquisition %></ul>
      <% question.options.each do |option| %>
        <li><input type="radio" name="option[<%= question.id %>]" value="<%= option.id %>">
          <%= option.choice %></li>
      <% end %>
    <% end %>
    <input type="submit" value="submit meow">
  </form>
</div>
